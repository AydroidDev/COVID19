<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Activities.DetailedPrevention">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:id="@+id/headingLayout"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/detailedPreventionImageViewRank"
                    android:background="#d3d3d3"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textSize="25sp"
                    android:fontFamily="@font/overpass_semibold"
                    android:id="@+id/detailedPreventionTitle"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/linearViewBorder"
                android:layout_below="@+id/headingLayout"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailedRecyclerItemPreventionImage"
                android:scaleType="centerCrop"
                android:layout_below="@+id/headingLayout"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/actor"
                android:textSize="20sp"
                android:id="@+id/detailedRecyclerItemPreventionDescription"
                android:layout_below="@+id/detailedRecyclerItemPreventionImage"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
