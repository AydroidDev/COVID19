<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <xute.storyview.StoryView
        android:id="@+id/storyView"
        android:layout_width="wrap_content"
        app:pendingIndicatorColor="#20639B"
        app:visitedIndicatorColor="#bcd0e1"
        android:layout_height="wrap_content"
        app:spaceBetweenImageAndIndicator="1dp"
        app:storyImageRadius="13dp"
        app:storyItemIndicatorWidth="1dp" />

</RelativeLayout>