<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F3F4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/overpass_semibold"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:id="@+id/virusesLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/virusesLabel"
        android:id="@+id/storiesRecycler"/>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    app:layout_constraintTop_toBottomOf="@id/storiesRecycler"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_height="wrap_content"
    android:id="@+id/preventionFragmentRecycler"/>



    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/progressLoading"
        app:indicatorColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:indicatorName="LineScalePulseOutRapidIndicator"
        />



</androidx.constraintlayout.widget.ConstraintLayout>