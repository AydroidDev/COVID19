<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:id="@+id/cardNews"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/titlelayoutNews"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/prevention_bg"
                        android:id="@+id/rankingImageNews"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="#1"
                        android:layout_marginTop="30dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/rankingTextNews"
                        android:fontFamily="@font/overpass_semibold"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="25sp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/rankingImageNews"
                        android:textColor="#000"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/overpass_semibold"
                        android:id="@+id/detailedRecyclerNewsTitle"/>
                </RelativeLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/underlineTheTitleNews"
                    android:layout_below="@+id/titlelayoutNews"
                    android:background="#d3d3d3"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:id="@+id/detailedRecyclerItemNewsImage"
                    android:scaleType="centerCrop"
                    android:layout_below="@id/underlineTheTitleNews"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:id="@+id/detailedRecyclerItemNewsDescription"
                    android:layout_below="@+id/detailedRecyclerItemNewsImage"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/detailedRecyclerItemNewsDescription"
                    android:layout_alignParentEnd="true"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/page_increase"
                        android:id="@+id/increaseSizeNews"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/page_decrease"
                        android:id="@+id/decreaseSizeNews"
                        android:layout_toEndOf="@+id/increaseSizeNews"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="30dp"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <com.google.android.gms.ads.AdView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@+id/cardNews"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            ads:adSize="BANNER"
            android:layout_centerHorizontal="true"
            ads:adUnitId="ca-app-pub-3451872773610798/3667119719"
            android:id="@+id/newsAd"/>
    </RelativeLayout>
</ScrollView>